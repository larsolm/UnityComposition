.pirho-combo-box
{
	flex-direction: row;
	flex-grow: 1;
}

.pirho-combo-box__text
{
	flex-grow: 1;
	margin: 0px 0px 1px 0px;
}

.pirho-combo-box__button
{
	min-width: 18px;
	max-width: 18px;
	height: 18px;
	align-self: center;
	padding: 5px 3px;
	margin: 0px;
}

.pirho-combo-box__button:hover
{
	background-color: #FFF;
}

.pirho-combo-box__button:active
{
	background-color: #999;
}