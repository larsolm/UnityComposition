.pargon-picker-button
{
	flex-grow: 1;
	flex-direction: row;
	align-content: center;
	align-items: center;
}

.pargon-picker-button > Button
{
	flex-direction: row;
	justify-content: center;
	flex-grow: 1;
	margin: 0;
	padding: 2px 0;
}

.pargon-picker-button > Button > Image
{
	width: 16px;
	height: 16px;
	margin: 2px 5px 2px 0;
}

.pargon-picker-button > Button > Label
{
	margin: 1px 0 2px 0;
	padding: 0;
}

.pargon-picker-button > Image
{
	width: 16px;
	height: 16px;
	margin: 0px 2px;
}