.base-button
{
	flex-grow: 1;
	flex-direction: row;
	align-content: center;
	align-items: center;
}

.base-button > Button
{
	flex-direction: row;
	justify-content: center;
	flex-grow: 1;
	margin: 0;
}

.base-button > Button > Image
{
	width: 16px;
	height: 16px;
}

.base-button > Button > Label
{
	margin-left: 5px;
}

.base-button > Image
{
	width: 16px;
	height: 16px;
	margin: 0px 2px;
}