.pargon-graph-view
{
	flex-grow: 1;
}

.pargon-graph-view .toolbar
{
	flex-grow: 1;
	flex-direction: row;
	max-height: 17px;
	padding: 0 5px;
	align-items: center;
	font-size: 10px;
}

.pargon-graph-view .toolbar .large-button
{
	min-width: 60px;
	color: #000;
	padding: 0 5px;
	margin: 0 0 0 0;
	border-color: #000;
	border-right-width: 1px;
}

.pargon-graph-view .toolbar .small-button
{
	width: 28px;
	padding: 0 6px;
	height: 14px;
	border-color: #000;
	border-right-width: 1px;
}

.pargon-graph-view .toolbar .first
{
	border-left-width: 1px;
}

.pargon-graph-view .graph
{
	flex-grow: 1;
    background-color: #202020;
}

.pargon-graph-view .graph-output .label
{
	align-self: center;
	margin: 0 0 0 10px;
	padding: 0 0 4px 0;
}

.pargon-graph-view .delete-button
{
	width: 12px;
	height: 12px;
	align-self: center;
	visibility: hidden;
	margin: 0 8px;
}

.pargon-graph-view .node:hover .delete-button
{
	visibility: visible;
}

.pargon-graph-view .delete-button:hover
{
	background-color: #2B2B2B;
}
