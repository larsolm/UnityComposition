.pirho-variable-reference
{
	flex-direction: row;
}

.pirho-variable-reference__mode
{
	min-width: 23px;
	max-width: 23px;
	min-height: 19px;
	max-height: 19px;
	align-self: flex-start;
	padding: 2px 1px;
	margin: 1px 0px;
	border-width: 1px;
	border-color: #AAAAAA;
}

.pirho-variable-reference--advanced .pirho-variable-reference__mode
{
	background-color: #6B6B6B;
}

.pirho-variable-reference--advanced .pirho-variable-reference__mode:hover
{
	background-color: #6B6B6B;
}

.pirho-variable-reference--advanced.pirho-variable-reference--invalid .pirho-variable-reference__mode
{
	background-color: #FF6B6B;
	border-color: #999999;
}

.pirho-variable-reference__simple
{
	display: flex;
	flex-grow: 1;
}

.pirho-variable-reference__advanced
{
	display: none;
	align-self: center;
	flex-grow: 1;
	margin-left: 5px;
}

.pirho-variable-reference--advanced .pirho-variable-reference__simple
{
	display: none;
}

.pirho-variable-reference--advanced .pirho-variable-reference__advanced
{
	display: flex;
}

.pirho-variable-reference__simple__container
{
	flex-direction: row;
	flex-grow: 1;
}

.pirho-variable-reference__simple .pirho-variable-reference__simple__error
{
	display: none;
	margin-left: 5px;
}

.pirho-variable-reference__simple--invalid .pirho-variable-reference__simple__error
{
	display: flex;
}

.pirho-variable-reference__simple__item
{
	flex-direction: row;
	flex-grow: 1;
	margin-left: 5px;
}

.pirho-variable-reference__simple__item--empty
{
	min-width: 17px;
}

.pirho-variable-reference__simple__item--empty .pirho-variable-reference__simple__item__popup .unity-popup-field__input
{
	min-width: 17px;
	max-width: 17px;
	padding-right: 17px;
}

.pirho-variable-reference__simple__item__popup .unity-popup-field__input
{
	padding-right: 20px;
	min-width: 0;
}

.pirho-variable-reference__simple__item__popup
{
	margin: 1px 0px;
	flex-grow: 1;
}


.pirho-variable-reference__simple__item--empty .pirho-variable-reference__simple__item__popup PopupTextElement
{
	visibility: hidden;
}

.pirho-variable-reference__simple__item__combo-box
{
}

.pirho-variable-reference__simple__item__array-index
{
	min-width: 25px;
	margin: 1px 0px;
}

.pirho-variable-reference__simple__item__array-index > IntegerInput
{
	border-width: 1px;
	padding: 1px 2px;
}

.pirho-variable-reference__advanced__text
{
	margin: 1px 0px;
}