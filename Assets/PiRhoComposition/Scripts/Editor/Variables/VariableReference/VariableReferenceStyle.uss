.pirho-variable-reference
{
	flex-direction: row;
}

.pirho-variable-reference__mode
{
	min-width: 23px;
	max-width: 23px;
	min-height: 19px;
	max-height: 19px;
	align-self: flex-start;
	padding: 2px 1px;
	margin: 1px 0px;
	border-width: 1px;
	border-color: #AAAAAA;
}

.pirho-variable-reference--advanced .pirho-variable-reference__mode
{
	background-color: #6B6B6B;
}

.pirho-variable-reference--advanced .pirho-variable-reference__mode:hover
{
	background-color: #6B6B6B;
}

.pirho-variable-reference--advanced.pirho-variable-reference--invalid .pirho-variable-reference__mode
{
	background-color: #FF6B6B;
	border-color: #999999;
}

.pirho-variable-reference__simple
{
	display: flex;
}

.pirho-variable-reference__advanced
{
	display: none;
}

.pirho-variable-reference--advanced .pirho-variable-reference__simple
{
	display: none;
}

.pirho-variable-reference--advanced .pirho-variable-reference__advanced
{
	display: flex;
}
